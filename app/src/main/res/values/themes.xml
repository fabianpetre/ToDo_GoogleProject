<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#757575</item>
        <item name="colorPrimaryVariant">#EAEAEA</item>
        <item name="colorOnBackground">#FAFAFA</item>
        <item name="colorOnPrimary">#FF000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3a7bd5</item>
        <item name="colorSecondaryVariant">#00d2ff</item>
        <item name="colorOnSecondary">#F5F5F5</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorAccent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FinalProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FinalProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FinalProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>