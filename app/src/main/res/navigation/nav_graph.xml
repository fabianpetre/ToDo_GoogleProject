<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/toDoListFragment">

    <fragment
        android:id="@+id/toDoListFragment"
        android:name="com.petref.finalproject.ToDoListFragment"
        tools:layout="@layout/fragment_to_do_list" >
        <action
            android:id="@+id/action_toDoListFragment_to_newEntryFragment"
            app:destination="@id/addEditEntryFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEditEntryFragment"
        android:name="com.petref.finalproject.AddEditEntryFragment"
        tools:layout="@layout/fragment_addedit_entry" >
        <action
            android:id="@+id/action_newEntryFragment_to_toDoListFragment"
            app:destination="@id/toDoListFragment"
            app:popUpTo="@id/toDoListFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="entryItem"
            app:argType="com.petref.finalproject.database.ToDoData"
            app:nullable="true" />
    </fragment>
</navigation>